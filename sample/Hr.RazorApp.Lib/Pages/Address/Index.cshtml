@page
@model Hr.RazorApp.AddressPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Addresses[0].StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addresses[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addresses[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addresses[0].PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addresses[0].SysUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addresses[0].SysStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addresses[0].SysEnd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Addresses) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SysUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SysStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SysEnd)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- pager -->
@if (Model.PagingData.RecordCount > 0) {
    <nav class="table-responsive">
        <ul class="pagination justify-content-center d-flex flex-wrap">
            @if (Model.PagingData.PageNumber > 1) {
                <li class="page-item">
                    <a class="page-link" href="/">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/?skip=@(Model.PagingData.PageSize*(Model.PagingData.PageNumber - 1))&take=@(Model.PagingData.PageSize)">Previous</a>
                </li>
            }

            @for(int i=1; i <= Model.PagingData.PageCount; i++) {
                <li class="page-item @(i == Model.PagingData.PageNumber ? "active" : "")">
                    <a class="page-link" href="/?skip=@(Model.PagingData.PageSize*(Model.PagingData.PageNumber + i))&take=@(Model.PagingData.PageSize)">@i</a>
                </li>
            }

            @if (Model.PagingData.PageNumber < Model.PagingData.PageCount) {
                <li class="page-item">
                    <a class="page-link" href="/?skip=@(Model.PagingData.PageSize*(Model.PagingData.PageNumber + 1))&take=@(Model.PagingData.PageSize)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/?skip=@(Model.PagingData.PageSize*(Model.PagingData.PageCount - 1))&take=@(Model.PagingData.PageSize)">Last</a>
                </li>
            }
        </ul>
    </nav>
}
