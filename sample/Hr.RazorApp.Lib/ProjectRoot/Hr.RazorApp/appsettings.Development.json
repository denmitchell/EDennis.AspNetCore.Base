{
  "Apis": {
    "HrRazorApp": {
      "ProjectName": "Hr.RazorApp",
      "HttpsPort": 44307,
      "HttpPort": 53512,
      "Scopes": [
        "Hr.RazorApp.*"
      ]
    },
    "IdentityServerApi": {
      "ProjectName": "IdentityServer",
      "HttpsPort": 44355,
      "HttpPort": 54006,
      "Oidc": {
        "ClientSecret": "secret",
        "Audience": "Hr.RazorApp",
        "Authority": "https://localhost:44355",
        "GetClaimsFromUserInfoEndpoint": true
      }
    }
  },
  "RoleClaims": {
    "Admin": {
      "user_scope": "Hr.RazorApp.*"
    },
    "Readonly": {
      "user_scope": "*.Details,*.List"
    }
  },
  "TestUserRoles": {
    "mike": [ "Admin" ],
    "cindy": [ "Readonly" ]
  },
  "Logging": {
    "Loggers": {
      "Default": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
          "Default": "Information",
          "Override": {
            "Microsoft.AspNetCore": "Warning",
            "Microsoft": "Warning",
            "System": "Warning"
          }
        },
        "WriteTo": [
          { "Name": "Console" },
          {
            "Name": "File",
            "Args": {
              "path": "log.txt",
              "rollingInterval": "Day"
            }
          }
        ],
        "Enrich": [ "FromLogContext" ],
        "Properties": {
          "Application": "ColorsApi"
        }
      },
      "ScopedTraceLogger": {
        "Enabled": true,
        "AssignmentKeySource": "User",
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
          "Default": "Debug",
          "Override": {
            "Microsoft.AspNetCore": "Warning",
            "Microsoft": "Warning",
            "System": "Warning"
          }
        },
        "WriteTo": [
          { "Name": "Console" },
          {
            "Name": "File",
            "Args": {
              "path": "scoped-log.txt",
              "rollingInterval": "Day"
            }
          }
        ],
        "Enrich": [ "FromLogContext" ],
        "Properties": {
          "Application": "Hr.Api"
        }
      }
    }
  }
}
