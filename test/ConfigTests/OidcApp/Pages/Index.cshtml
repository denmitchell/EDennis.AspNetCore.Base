@page
@model IndexModel
@inject Microsoft.AspNetCore.Authentication.OpenIdConnect.OpenIdConnectHandler OpenIdConnectHandler
@inject Microsoft.Extensions.Options.IConfigureOptions<Microsoft.AspNetCore.Authentication.OpenIdConnect.OpenIdConnectOptions> OpenIdConnectOptions
@{
    ViewData["Title"] = "Home page";
    ViewData["Authority"] = OpenIdConnectHandler.Options.Authority;
    ViewData["ClientId"] = OpenIdConnectHandler.Options.ClientId;
    ViewData["ClientSecret"] = OpenIdConnectHandler.Options.ClientSecret;
    ViewData["RequireHttpsMetadata"] = OpenIdConnectHandler.Options.RequireHttpsMetadata;
    ViewData["GetClaimsFromUserInfoEndpoint"] = OpenIdConnectHandler.Options.GetClaimsFromUserInfoEndpoint;
}

