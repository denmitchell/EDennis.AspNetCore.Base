{
  "Apis": {
    "IdentityServer": {
      "ProjectName": "IdentityServer",
      "HttpsPort": 9901,
      "HttpPort": 9902,
      "OAuth": {
        "ClientSecret": "secret",
        "Audience": "ApiConfigsApi",
        "Authority": "https://localhost:5000"
      }
    },
    "Api2": {
      "ProjectName": "Api2",
      "Host": "localhost",
      "Scheme": "https",
      "HttpsPort": 5505,
      "HttpPort": 5506,
      "Version": 1.1,
      "Scopes": [ "Api2.*" ],
      "Mappings": {
        "ClaimsToHeaders": {
          "name": "X-User2",
          "role": "X-Role2"
        },
        "HeadersToHeaders": {
          "X-Testing-Instance": "X-Testing-Instance2",
          "X-Set-ScopedLogger": "X-Set-ScopedLogger2",
          "X-Clear-ScopedLogger": "X-Clear-ScopedLogger2",
          "X-User": "X-User2",
          "X-Role": "X-Role2",
          "X-HostPath": "X-HostPath2"
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  }
}
