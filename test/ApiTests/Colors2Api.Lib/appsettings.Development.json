{
  "ScopedConfiguration": {
    "Enabled": true
  },
  "ScopeProperties": {
    "Enabled": true,
    "UserSource": "JwtNameClaim",
    "CopyHeaders": true,
    "CopyClaims": true,
    "AppendHostPath": true
  },
  "Apis": {
    "Colors2Api": {
      "ProjectName": "Colors2Api",
      "HttpsPort": 44352,
      "HttpPort": 58358,
      "Scopes": [
        "DbContextInterceptorApi.*"
      ]
    }
  },
  "DbContexts": {
    "Color2DbContext": {
      "DatabaseProvider": "SqlServer",
      "ConnectionString": "Server=(localdb)\\MSSQLLocalDB;Database=Color2Db;Trusted_Connection=True;MultipleActiveResultSets=True;",
      "Interceptor": {
        "Enabled": true,
        "IsInMemory": false,
        "IsolationLevel": "ReadCommitted",
        "ResetSqlServerIdentities": false,
        "ResetSqlServerSequences": false
      }
    }
  },
  "MockHeaders": {
    "Enabled": true,
    "X-User": {
      "Values": [ "tester@example.org" ],
      "ConflictResolution": "Overwrite"
    }
  },
  "DeveloperName": "moe",
  "PkRewriter": {
    "Enabled": true,
    "BasePrefix": -999,
    "DeveloperNameEnvironmentVariable": "DeveloperName",
    "DeveloperPrefixes": {
      "moe": -501,
      "larry": -502,
      "curly": -503
    }
  },
  "Logging": {
    "Loggers": {
      "ExceptionLogger": {
        "Enabled": true
      },
      "Default": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
          "Default": "Information",
          "Override": {
            "Microsoft.AspNetCore": "Warning",
            "Microsoft": "Warning",
            "System": "Warning"
          }
        },
        "WriteTo": [
          { "Name": "Console" },
          {
            "Name": "File",
            "Args": {
              "path": "log.txt",
              "rollingInterval": "Day"
            }
          }
        ],
        "Enrich": [ "FromLogContext" ],
        "Properties": {
          "Application": "ColorsApi"
        }
      },
      "ScopedTraceLogger": {
        "Enabled": true,
        "AssignmentKeySource": "User",
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
          "Default": "Verbose",
          "Override": {
            "Microsoft.AspNetCore": "Warning",
            "Microsoft": "Warning",
            "System": "Warning"
          }
        },
        "WriteTo": [
          { "Name": "Console" },
          {
            "Name": "File",
            "Args": {
              "path": "scoped-log.txt",
              "rollingInterval": "Day"
            }
          }
        ],
        "Enrich": [ "FromLogContext" ],
        "Properties": {
          "Application": "DbContextInterceptorApi"
        }
      }
    }
  }
}
