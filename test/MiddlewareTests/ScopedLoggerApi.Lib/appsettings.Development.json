{
  "ScopedConfiguration": {
    "Enabled": true
  },
  "Apis": {
    "ScopedLoggerApi": {
      "ProjectName": "ScopedLoggerApi",
      "HttpsPort": 44352,
      "HttpPort": 51073,
      "Scopes": [
        "ScopedLoggerApi.*"
      ]
    }
  },
  "ScopeProperties": {
    "Enabled": true,
    "UserSources": {
      "AuthenticatedUserSource": "JwtNameClaim",
      "UnauthenticatedUserSource": "SessionId"
    },
    "CopyHeaders": false,
    "CopyClaims": false,
    "AppendHostPath": false
  },
  "Logging": {
    "Loggers": {
      "Default": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
          "Default": "Information",
          "Override": {
            "Microsoft.AspNetCore": "Warning",
            "Microsoft": "Warning",
            "System": "Warning"
          }
        },
        "WriteTo": [
          { "Name": "Console" },
          {
            "Name": "File",
            "Args": {
              "path": "log.txt",
              "rollingInterval": "Day"
            }
          }
        ],
        "Enrich": [ "FromLogContext" ],
        "Properties": {
          "Application": "ColorsApi"
        }
      },
      "ScopedTraceLogger": {
        "Enabled": true,
        "AssignmentKeySource": "User",
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
          "Default": "Verbose",
          "Override": {
            "Microsoft.AspNetCore": "Warning",
            "Microsoft": "Warning",
            "System": "Warning"
          }
        },
        "WriteTo": [
          { "Name": "Console" },
          {
            "Name": "File",
            "Args": {
              "path": "scoped-log.txt",
              "rollingInterval": "Day"
            }
          }
        ],
        "Enrich": [ "FromLogContext" ],
        "Properties": {
          "Application": "ScopedLoggerApi"
        }
      }
    }
  }
}
