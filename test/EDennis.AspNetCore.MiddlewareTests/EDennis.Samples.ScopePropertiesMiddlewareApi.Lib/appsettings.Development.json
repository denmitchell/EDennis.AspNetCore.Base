{
  "Apis": {
    "ScopePropertiesMiddlewareApi": {
      "ProjectName": "EDennis.Samples.ScopePropertiesMiddlewareApi",
      "HttpsPort": 5501,
      "HttpPort": 5502,
      "Scopes": [
        "EDennis.Samples.ScopePropertiesMiddlewareApi.*"
      ]
    }
  },
  "ScopeProperties": {
    "UserSource": "XUserQueryString",
    "CopyHeaders": true,
    "CopyClaims": true,
    "AppendHostPath": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  }
}
