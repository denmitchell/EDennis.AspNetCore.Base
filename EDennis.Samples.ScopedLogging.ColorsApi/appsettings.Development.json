{
  "AutoLogin": {
    "Moe": {
      "Default": true,
      "Claims": [
        {
          "Type": "role",
          "Value": "Admin"
        }
      ]
    },
    "Larry": {
      "Default": true,
      "Claims": [
        {
          "Type": "role",
          "Value": "User"
        }
      ]
    },
    "Curly": {
      "Default": true,
      "Claims": [
        {
          "Type": "role",
          "Value": "Readonly"
        }
      ]
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "%TEMP%\\Logs\\serilog-configuration-sample.txt" }
      }
    ],
    "Properties": {
      "Application": "ColorsApi"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  }
}
