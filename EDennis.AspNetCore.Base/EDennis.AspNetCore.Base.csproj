<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>A library that supports ASP.NET Core MVC development with a repository pattern and various classes that make it easier to perform unit/integration testing in a three-tier architecture.</Description>
    <Copyright>Dennis C. Mitchell, 2018</Copyright>
    <PackageIconUrl>https://avatars0.githubusercontent.com/u/2938333?s=400&amp;v=4</PackageIconUrl>
    <PackageProjectUrl>https://github.com/denmitchell/EDennis.AspNetCore.Base</PackageProjectUrl>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/denmitchell/EDennis.AspNetCore.Base</RepositoryUrl>
    <PackageTags>Repository ASP.NET API Launcher Testing</PackageTags>
    <PackageReleaseNotes>Added a base Hub for SignalR that supports integration testing.  Exposed DbSet, DbQuery, and Context properties for the base repository classes</PackageReleaseNotes>
    <Version>1.1.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="EDennis.MigrationsExtensions" Version="1.8.0" />
    <PackageReference Include="Microsoft.AspNetCore.App" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR" Version="1.1.0" />
    <!--<PackageReference Include="IdentityServer4.AccessTokenValidation" Version="2.7.0" />-->
    <PackageReference Include="IdentityModel" Version="4.0.0-bruichladdich" />
    <PackageReference Include="Microsoft.AspNetCore.Authorization.Policy" Version="2.2.0" />
  </ItemGroup>

</Project>
