{
  "Preauthentication": "C", //U, CU, null
  "ConnectionType": "R", //A: production
  "IsolationType": "C", //U, S
  "ConnectionStrings": {
    "SomeDbContext": "Server=(localdb)\\mssqllocaldb;Database=SomeDb;Trusted_Connection=True;MultipleActiveResultSets=true",
    "SomeHistoryDbContext": "Server=(localdb)\\mssqllocaldb;Database=SomeDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Apis": {
    "MyApi1": {
      "Scheme": "https",
      "Host": "localhost",
      "HttpsPort": 6542,
      "HttpPort": 6543,
      "ApiLauncher": true,
      "Scopes": [ "My.Api1.*" ]
    },
    "MyApi2": {
      "Scheme": "https",
      "Host": "localhost",
      "HttpsPort": 6544,
      "HttpPort": 6544,
      "ApiLauncher": true,
      "Scopes": [ "My.Api2.*" ]
    }
  },
  "MockClients": {
    "EDennis.Samples.SomeExternalApi": {
      "IsActive": true,
      "ClientId": "EDennis.Samples.SomeExternalApi",
      "ClientSecret": "secret",
      "Scopes": [
        "EDennis.Samples.SomeExternalApi.*"
      ],
      "Claims": [
        {
          "Type": "X-Instruction",
          "Value":  ""
        }
      ]
    },
    "EDennis.Samples.SomeExternalApi2": {
      "ClientId": "EDennis.Samples.SomeExternalApi2",
      "ClientSecret": "secret",
      "Scopes": [
        "EDennis.Samples.SomeExternalApi2.*"
      ]
    }
  },
  "MockUsers": {
    "Moe": {
      "IsActive": true,
      "Claims": [
        {
          "Type": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
          "Value": "moe@stooges.org"
        }
      ]
    },
    "Larry": {
      "Claims": [
        {
          "Type": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
          "Value": "larry@stooges.org"
        }
      ]
    }
  },
  "Security": {
    "IdentityServerApi": "https://localhost:55555",
    "ClientSecret": "secret",
    "ClearDefaultInboundClaimTypeMap": true,
    "ScopePatternOptions": {
      "ExclusionPrefix": "-"
    },
    "OidcOptions": {
      "UserScopePrefix": "user_",
      "ResponseType": "code id_token",
      "RequireHttpsMetadata": false,
      "SaveTokens": true,
      "GetClaimsFromUserInfoEndpoint": true,
      "OidcScopeOptions": {
        "AddOfflineAccess": true,
        "AdditionalScopes": [
          "name"
        ]
      }
    }
  },
  "Logging": {
    "Loggers": {
      "Default": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
        "MinimumLevel": {
          "Default": "Information",
          "Override": {
            "Microsoft": "Warning",
            "System": "Warning"
          }
        },
        "WriteTo": [
          { "Name": "Console" }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
          "Application": "ColorsApi"
        }
      },
      "SerilogDebugLogger": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
        "MinimumLevel": {
          "Default": "Debug",
          "Override": {
            "Microsoft": "Warning",
            "System": "Warning"
          }
        },
        "WriteTo": [
          { "Name": "Console" }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
          "Application": "ColorsApi"
        }
      },
      "SerilogVerboseLogger": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
        "MinimumLevel": {
          "Default": "Verbose",
          "Override": {
            "Microsoft": "Warning",
            "System": "Warning"
          }
        },
        "WriteTo": [
          { "Name": "Console" }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
          "Application": "ColorsApi"
        }
      }
    }
  }
}
