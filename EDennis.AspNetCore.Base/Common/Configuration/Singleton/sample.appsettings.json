{
  "Profiles": {
    "Default": {
      "Apis": {
        "MyApi1": {
          "Scheme": "http",
          "Host": "localhost",
          "Port": 6542,
          "Scopes": [ "My.Api1.*" ]
        },
        "MyApi2": {
          "Scheme": "http",
          "Host": "localhost",
          "Port": 6543,
          "Scopes": [ "My.Api2.*" ]
        }
      },
      "ConnectionStrings": {
        "SomeDbContext": "Server=(localdb)\\mssqllocaldb;Database=SomeDb;Trusted_Connection=True;MultipleActiveResultSets=true",
        "SomeHistoryDbContext": "Server=(localdb)\\mssqllocaldb;Database=SomeDb;Trusted_Connection=True;MultipleActiveResultSets=true"
      },
      "MockClient": {
        "ClientId": "EDennis.Samples.SomeExternalApi",
        "ClientSecret": "secret",
        "Scopes": [
          "EDennis.Samples.SomeExternalApi.*"
        ]
      },
      "AutoLogin": {
        "UserName": "Moe",
        "Claims": [
          {
            "Type": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
            "Value": "moe@stooges.org"
          }
        ]
      }
    },
    "yy1": {
      "Apis": {
        "MyApi1": {
          "Embedded": true,
          "Scopes": [ "My.Api1.*" ]
        },
        "MyApi2": {
          "Embedded": true,
          "Scopes": [ "My.Api1.*" ]
        }
      },
      "ConnectionStrings": {
        "ColorDbContext": "Server=yy1;Database=ColorDb;Trusted_Connection=True;MultipleActiveResultSets=true",
        "ColorHistoryDbContext": "Server=yy1;Database=ColorDb;Trusted_Connection=True;MultipleActiveResultSets=true"
      },
      "MockClient": {
        "ClientId": "EDennis.Samples.SomeExternalApi",
        "ClientSecret": "secret",
        "Scopes": [
          "EDennis.Samples.SomeExternalApi.*"
        ]
      },
      "AutoLogin": {
        "UserName": "Larry",
        "Claims": [
          {
            "Type": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
            "Value": "larry@stooges.org"
          }
        ]
      }
    }
  },
  "Security": {
    "IdentityServerApi": "https://localhost:55555",
    "ClientSecret": "secret",
    "ClearDefaultInboundClaimTypeMap": true,
    "ScopePatternOptions": {
      "ExclusionPrefix": "-"
    },
    "OidcOptions": {
      "UserScopePrefix": "user_",
      "ResponseType": "code id_token",
      "RequireHttpsMetadata": false,
      "SaveTokens": true,
      "GetClaimsFromUserInfoEndpoint": true,
      "OidcScopeOptions": {
        "AddOfflineAccess": true,
        "AdditionalScopes": [
          "name"
        ]
      }
    }
  },
  "Logging": {
    "Loggers": {
      "Default": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
        "MinimumLevel": {
          "Default": "Information",
          "Override": {
            "Microsoft": "Warning",
            "System": "Warning"
          }
        },
        "WriteTo": [
          { "Name": "Console" }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
          "Application": "ColorsApi"
        }
      },
      "SerilogDebugLogger": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
        "MinimumLevel": {
          "Default": "Debug",
          "Override": {
            "Microsoft": "Warning",
            "System": "Warning"
          }
        },
        "WriteTo": [
          { "Name": "Console" }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
          "Application": "ColorsApi"
        }
      },
      "SerilogVerboseLogger": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
        "MinimumLevel": {
          "Default": "Verbose",
          "Override": {
            "Microsoft": "Warning",
            "System": "Warning"
          }
        },
        "WriteTo": [
          { "Name": "Console" }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
          "Application": "ColorsApi"
        }
      }
    }
  }
}
