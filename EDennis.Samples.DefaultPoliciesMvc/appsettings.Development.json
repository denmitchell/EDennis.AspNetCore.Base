{
  "Apis": {
    "IdentityServerClient": {
      "ProjectName": "IdentityServer",
      "SolutionName": "EDennis.AspNetCore.Base",
      "BaseAddress": "http://localhost:51159",
      "ExternallyLaunched": true,
      "Secret": null
    },
    "DefaultPoliciesApiClient": {
      "ProjectName": "EDennis.Samples.DefaultPoliciesApi",
      "SolutionName": "EDennis.AspNetCore.Base",
      "BaseAddress": "http://localhost:55209",
      "ExternallyLaunched": true,
      "Secret": "secret",
      "Scopes": [
        "EDennis.Samples.DefaultPoliciesApi"
      ]
    }
  },
  "Security": {
    "IdentityServerApiConfigKey": "IdentityServerClient",
    "ScopeClaimType": "user_scope",
    "PatternClaimType": "role",
    "ExclusionPrefix": "-",
    "GloballyIgnoredScopes": [
      "EDennis.Samples.DefaultPoliciesMvc.ViaClaims"
    ],
    "NamedPatterns": {
      "EDennis.Samples.DefaultPoliciesMvc.Admin": [ "EDennis.Samples.DefaultPoliciesMvc" ],
      "EDennis.Samples.DefaultPoliciesMvc.Readonly": [
        "EDennis.Samples.DefaultPoliciesMvc.*.Index*",
        "EDennis.Samples.DefaultPoliciesMvc.*.Details*"
      ],
      "EDennis.Samples.DefaultPoliciesMvc.NoDelete": [ "-EDennis.Samples.DefaultPoliciesMvc.*.Delete*" ]
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  }
}
