        "EDennis.Samples.DefaultPoliciesApi.ViaClaims"
      ],
      "NamedPatterns": {
        "Admin": [ "EDennis.Samples.DefaultPoliciesApi" ],
        "Readonly": [ "EDennis.Samples.DefaultPoliciesApi.*.Get*" ],
        "NoDelete": [ "-EDennis.Samples.DefaultPoliciesApi.*.Delete*" ]
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  }
