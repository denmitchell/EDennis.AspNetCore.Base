{
  "Apis": {
    "IdentityServer": {
      "ProjectName": "IdentityServer",
      "SolutionName": "EDennis.AspNetCore.Base",
      "BaseAddress": "http://localhost:51159",
      "ExternallyLaunched":  true,
      "Secret": null
    }
  },
  "MockClient": {
    "EDennis.Samples.DefaultPoliciesApi.Client1": {
      "Secret": "secret",
      "Scopes": [
        "EDennis.Samples.DefaultPoliciesApi.ViaClaims"
      ]
    },
    "EDennis.Samples.DefaultPoliciesApi.Client2": {
      "Secret": "secret",
      "Scopes": [
        "EDennis.Samples.DefaultPoliciesApi.ViaClaims"
      ]
    },
    "EDennis.Samples.DefaultPoliciesApi.Client3": {
      "Secret": "secret",
      "Scopes": [
        "EDennis.Samples.DefaultPoliciesApi.ViaClaims"
      ]
    }
  },
  "Security": {
    "IdentityServerApiConfigKey": "IdentityServer",
    "ClearDefaultInboundClaimTypeMap": true,
    "ScopePatternOptions": {
      "PatternClaimType": "role",
      "ExclusionPrefix": "-",
      "GloballyIgnoredScopes": [
        "EDennis.Samples.DefaultPoliciesApi.ViaClaims"
      ],
      "NamedPatterns": {
        "Admin": [ "EDennis.Samples.DefaultPoliciesApi" ],
        "Readonly": [ "EDennis.Samples.DefaultPoliciesApi.*.Get*" ],
        "NoDelete": [ "-EDennis.Samples.DefaultPoliciesApi.*.Delete*" ]
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  }
}
