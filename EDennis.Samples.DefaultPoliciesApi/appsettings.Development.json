    "IdentityServerApi": {
      "ProjectName": "IdentityServer",
      "SolutionName": "EDennis.AspNetCore.Base",
      "BaseAddress": null,
      "ExternallyLaunched": false
    }
  },
  "MockClient": {
    "EDennis.Samples.DefaultPoliciesApi.Client1": {
      "Secret": "secret",
      "Scopes": [
        "EDennis.Samples.DefaultPoliciesApi"
      ]
    },
    "EDennis.Samples.DefaultPoliciesApi.Client2": {
      "Secret": "secret",
      "Scopes": [
        "EDennis.Samples.DefaultPoliciesApi.Person"
      ]
    },
    "EDennis.Samples.DefaultPoliciesApi.Client3": {
      "Secret": "secret",
      "Scopes": [
        "EDennis.Samples.DefaultPoliciesApi.Person.Index",
        "EDennis.Samples.DefaultPoliciesApi.Person.Details",
